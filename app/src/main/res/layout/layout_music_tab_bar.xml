<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/selector_action_bar_menu"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="end"
        android:background="@drawable/selector_action_bar_menu"
        android:scaleType="centerInside"
        android:src="@drawable/ic_menu_search" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_local_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/local_music"
            android:textColor="@drawable/selector_music_tab_bar_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_online_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="@string/online_music"
            android:textColor="@drawable/selector_music_tab_bar_text_color"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>